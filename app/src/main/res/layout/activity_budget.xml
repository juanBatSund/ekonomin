<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <data>
        <variable name="viewmodel" type="com.juanbas.ekonomin.navigationWrapper.budget.BudgetViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".navigationWrapper.budget.BudgetView">
        <LinearLayout
                android:layout_width="375dp"
                android:layout_height="45dp"
                android:gravity="start|top"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:id="@+id/linearLayout">

            <TextView
                    android:id="@+id/due_date_reference"
                    android:layout_width="68dp"
                    android:layout_height="31dp"
                    android:text="@string/due_date_reference"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/browser_actions_title_color"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

            <TextView
                    android:id="@+id/datePickedTextLabel"
                    android:layout_width="206dp"
                    android:layout_height="31dp"
                    android:text="@{viewmodel.datePicked}"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/browser_actions_title_color"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

            <Button
                    android:id="@+id/datePickerTextEdit"
                    style="@style/FirebaseUI.Button.AccountChooser"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:background="@drawable/fui_idp_button_background_phone"
                    android:backgroundTint="@color/colorPrimary"
                    android:onClick="checkDateTextEdit"
                    android:text="@string/choose_date"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout android:layout_width="378dp"
                      android:layout_height="381dp" app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                      app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginEnd="8dp" android:id="@+id/linearLayout3" android:layout_marginBottom="8dp"
                      app:layout_constraintBottom_toTopOf="@+id/linearLayout4" android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="376dp"
                android:layout_height="61dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.391"
                app:layout_constraintStart_toStartOf="parent">

            <Button
                    android:id="@+id/cancel_budget_button"
                    style="@style/FirebaseUI.Button.AccountChooser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/fui_idp_button_background_phone"
                    android:backgroundTint="@color/colorPrimary"
                    android:onClick="onCancelButtonClicked"
                    android:text="@string/cancel_button"
                    android:textAlignment="center" />

            <Button
                    android:id="@+id/save_budget_button"
                    style="@style/FirebaseUI.Button.AccountChooser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/fui_idp_button_background_phone"
                    android:backgroundTint="@color/colorPrimary"
                    android:onClick="onSaveButtonClicked"
                    android:text="@string/save_button"
                    android:textAlignment="center" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>